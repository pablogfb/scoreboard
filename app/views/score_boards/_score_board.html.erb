<%= turbo_frame_tag score_board do %>
  <div class="flex justify-between mb-4 p-3">
    <%= link_to score_board.name,
                score_board_path(score_board),
                class: "text-xl",
                data: { turbo_frame: "_top" } %>
    <div class="flex">
      <%= button_to "Delete",
                    score_board_path(score_board),
                    method: :delete,
                    class: "bg-teal-300 rounded-md p-2 mr-2" %>
      <%= link_to "Edit",
                  edit_score_board_path(score_board),
                  class: "bg-teal-300 rounded-md p-2" %>
    </div>
  </div>
<% end %>